{
  "name": "scratchpads",
  "description": "Makes your applications into dropdowns & togglable popups.",
  "environments": [
    "hyprland"
  ],
  "commands": [
    {
      "name": "attach",
      "signature": "attach",
      "short_description": "Attach the focused window to the last focused scratchpad.",
      "full_description": "Attach the focused window to the last focused scratchpad."
    },
    {
      "name": "hide",
      "signature": "hide <name>",
      "short_description": "hides scratchpad \"name\" (accepts \"*\").",
      "full_description": "<name> hides scratchpad \"name\" (accepts \"*\").\n\nArgs:\n    uid: The scratchpad name\n    flavor: The hide flavor"
    },
    {
      "name": "show",
      "signature": "show <name>",
      "short_description": "shows scratchpad \"name\" (accepts \"*\").",
      "full_description": "<name> shows scratchpad \"name\" (accepts \"*\").\n\nArgs:\n    uid: The scratchpad name"
    },
    {
      "name": "toggle",
      "signature": "toggle <name>",
      "short_description": "toggles visibility of scratchpad \"name\" (supports multiple names).",
      "full_description": "<name> toggles visibility of scratchpad \"name\" (supports multiple names).\n\nArgs:\n    uid_or_uids: The scratchpad name(s)"
    }
  ],
